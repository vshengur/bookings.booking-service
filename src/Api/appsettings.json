{
  "ConnectionStrings": {
    "Postgres": "Host=postgres;Database=booking;Username=booking;Password=booking",
    "RabbitMq": "rabbitmq://rabbitmq",
    "Mongo": "mongodb://mongo"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Seq" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq", // внутри docker-сети
          "apiKey": null, // при необходимости
          "bufferBaseFilename": "/app/logbuffer/seq-buffer" // durable режим
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
